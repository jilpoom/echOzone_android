<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="319dp"
        android:layout_height="499dp"
        android:background="@drawable/layout_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:text="Login"
            android:textColor="@color/blue"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/user_id"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/edt_round"
            android:ems="10"
            android:fontFamily="@font/pretendardvariable"
            android:hint="아이디"
            android:inputType="textPersonName"
            android:paddingLeft="15dp"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />

        <EditText
            android:id="@+id/user_pw"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edt_round"
            android:ems="10"
            android:fontFamily="@font/pretendardvariable"
            android:hint="비밀번호"
            android:inputType="textPersonName"
            android:paddingLeft="15dp"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_id" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="210dp"
            android:layout_height="45dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/button_round"
            android:elevation="10dp"
            android:text="Log in"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/user_pw"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/user_pw"
            app:layout_constraintTop_toBottomOf="@+id/user_pw" />

        <CheckBox
            android:id="@+id/ck_saveId"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="60dp"
            android:background="@android:color/transparent"
            android:button="@null"
            android:drawableLeft="@drawable/custom_checkbox"
            android:fontFamily="@font/pretendardvariable"
            android:scaleX="0.70"
            android:scaleY="0.70"
            android:text=" 아이디 저장"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/btn_login"
            app:layout_constraintHorizontal_bias="0.484"
            app:layout_constraintStart_toStartOf="@+id/btn_login"
            app:layout_constraintTop_toBottomOf="@+id/btn_login" />

        <CheckBox
            android:id="@+id/ck_autoLogin"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:button="@null"
            android:drawableLeft="@drawable/custom_checkbox"
            android:fontFamily="@font/pretendardvariable"
            android:scaleX="0.70"
            android:scaleY="0.70"
            android:text=" 자동 로그인"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/ck_saveId"
            app:layout_constraintStart_toStartOf="@+id/ck_saveId"
            app:layout_constraintTop_toBottomOf="@+id/ck_saveId" />

        <TextView
            android:id="@+id/tv_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/pretendardvariable"
            android:text="회원가입 하기"
            android:textColor="@color/blue"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_text"
            app:layout_constraintEnd_toEndOf="@+id/btn_login"
            app:layout_constraintStart_toEndOf="@+id/tv_text"
            app:layout_constraintTop_toTopOf="@+id/tv_text"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/pretendardvariable"
            android:text="ID / PW 찾기       |"
            android:textColor="@color/blue"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/btn_login"
            app:layout_constraintTop_toBottomOf="@+id/btn_login" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/sw_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:checked="true"
            android:gravity="center"
            android:text="일반  "
            android:textColor="#656565"
            android:textSize="12sp"
            android:thumb="@drawable/shape_switch_thumb"
            app:layout_constraintEnd_toEndOf="@+id/user_id"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/user_id"
            app:layout_constraintTop_toBottomOf="@+id/textView12"
            app:switchMinWidth="45dp"
            app:track="@drawable/selector_switch" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>